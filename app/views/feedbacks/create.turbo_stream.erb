<%= turbo_stream.replace dom_id(@quiz, :feedback) do %>
  <%= render "feedbacks/form", quiz: @quiz, feedback: @feedback %>
<% end %>

<% if @created_feedback.present? %>
  <%= turbo_stream.prepend "feedbacks" do %>
    <%= render @created_feedback %>
  <% end %>
<% end %>

<%= turbo_stream.replace "flash-messages" do %>
  <div id="flash-messages" class="mx-auto w-full max-w-md space-y-2">
    <%= render partial: "shared/flash", formats: [:html] %>
  </div>
<% end %>
