<%= turbo_frame_tag dom_id(@quiz, :feedbacks_frame) do %>
  <ul id="<%= dom_id(@quiz, :feedbacks_list) %>" class="mt-3 space-y-3">
    <%= render partial: "feedbacks/feedback", collection: @feedbacks, as: :feedback %>
  </ul>

  <div id="<%= dom_id(@quiz, :feedbacks_pagination) %>" class="mt-3 text-center">
    <% if @next_page %>
      <%= link_to "Load more",
      quiz_feedbacks_path(@quiz, page: @next_page, format: :turbo_stream),
      class: "inline-flex items-center rounded-md border px-3 py-1.5 hover:bg-gray-50" %>

    <% end %>
  </div>
<% end %>
