<%= render "devise/shared/card" do %>
  <h1 class="text-2xl font-bold mb-4">Log in</h1>

  <% input = "w-full rounded-xl border border-gray-300 px-4 py-2.5 focus:ring-2 focus:ring-blue-500" %>
  <% btn   = "w-full bg-gray-900 hover:bg-black text-white font-medium px-4 py-2.5 rounded-xl" %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: input %>
    </div>

    <% if devise_mapping.rememberable? %>
      <label class="inline-flex items-center gap-2 text-sm text-gray-700">
        <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        Remember me
      </label>
    <% end %>

    <%= f.submit "Log in", class: btn %>
  <% end %>

  <%= render "devise/shared/links_block" %>
<% end %>
