<%= render "devise/shared/card" do %>
  <h1 class="text-2xl font-bold mb-4">Edit Account</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <% input = "w-full rounded-xl border border-gray-300 px-4 py-2.5 focus:ring-2 focus:ring-blue-500" %>
  <% btn   = "bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2.5 rounded-xl" %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <div>
      <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :username, autocomplete: "username", class: input %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autocomplete: "email", class: input %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="text-sm text-gray-600">Waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div>
      <div class="flex items-center justify-between">
        <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <span class="text-xs text-gray-500">leave blank to keep</span>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: input %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input %>
    </div>

    <div>
      <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: input %>
      <p class="text-xs text-gray-500 mt-1">We need your current password to confirm changes.</p>
    </div>

    <div class="flex items-center gap-3 pt-2">
      <%= f.submit "Update", class: btn %>
      <%= link_to "Back", root_path, class: "px-4 py-2.5 rounded-xl border border-gray-300 text-gray-700 hover:bg-gray-50" %>
    </div>
  <% end %>

  <hr class="my-6">

  <h2 class="text-lg font-semibold mb-3">Cancel my account</h2>
  <%= button_to "Delete my account", registration_path(resource_name),
        method: :delete,
        data: { confirm: "Are you sure?" },
        class: "bg-red-600 hover:bg-red-700 text-white font-medium px-4 py-2.5 rounded-xl" %>
<% end %>
