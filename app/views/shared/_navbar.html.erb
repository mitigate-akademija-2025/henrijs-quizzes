<header class="bg-black text-white shadow">
  <div class="max-w-5xl mx-auto px-6">
    <div class="h-14 flex items-center justify-between">

      <!-- Brand -->
      <div class="flex items-center gap-3">
        <%= link_to root_path, class: "inline-flex items-center gap-2 hover:opacity-80 transition" do %>
          <% if user_signed_in? %>
            <%= link_to my_profile_path,
                      class: "flex items-center gap-1 hover:text-blue-300 text-white px-3 py-1.5 rounded cursor-pointer transition" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white/90" viewBox="0 0 24 24" fill="none">
                <path d="M15.75 7.5a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" stroke="currentColor" stroke-width="1.5"/>
                <path d="M4.5 20.25a7.5 7.5 0 0 1 15 0" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
              <span><%= current_user.username.presence || "User" %></span>
            <% end %>
          <% else %>
            <span class="font-bold tracking-wide">Henrijs Quizzes</span>
          <% end %>
        <% end %>
      </div>

      <!-- Desktop nav -->
      <nav class="hidden sm:flex items-center gap-8">
        <% if policy(User).index? %>
          <%= link_to "All Users", profiles_path, class: "hover:text-gray-400 transition" %>
        <% end %>

        <%= link_to "Browse", quizzes_path, class: "hover:text-gray-400 transition" %>

        <% if user_signed_in? %>
          <%= link_to "Create Quiz", new_quiz_path,
              class: "inline-flex items-center hover:text-blue-300 text-white py-1.5 rounded transition" %>

          <%= button_to "Logout",
              destroy_user_session_path,
              method: :delete,
              class: "hover:text-blue-300 text-white py-1.5 rounded cursor-pointer" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "hover:text-blue-300 text-white py-1.5 rounded cursor-pointer transition" %>
          <%= link_to "Sign up", new_user_registration_path,
              class: "inline-flex items-center gap-2 hover:text-blue-300 text-white py-1.5 rounded cursor-pointer transition" %>
        <% end %>
      </nav>

      <!-- Mobile menu -->
      <details class="sm:hidden relative">
        <summary class="list-none cursor-pointer inline-flex items-center gap-2 rounded px-2 py-1 hover:bg-gray-800 transition">
          <span class="sr-only">Menu</span>
          <!-- hamburger -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </summary>
        <div class="absolute right-0 mt-2 w-48 rounded-lg border border-gray-700 bg-black shadow-lg p-2 space-y-1 z-50">
          <%= link_to "Browse", quizzes_path, class: "block hover:text-blue-300 text-white px-3 py-1.5 rounded cursor-pointer transition" %>

          <% if user_signed_in? %>
            <%= link_to "Create Quiz", new_quiz_path,
                class: "block hover:text-blue-300 text-white px-3 py-1.5 rounded cursor-pointer transition" %>

            <%= link_to my_profile_path,
                      class: "flex items-center gap-1 hover:text-blue-300 text-white px-3 py-1.5 rounded cursor-pointer transition" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white/90" viewBox="0 0 24 24" fill="none">
                <path d="M15.75 7.5a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" stroke="currentColor" stroke-width="1.5"/>
                <path d="M4.5 20.25a7.5 7.5 0 0 1 15 0" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
              <span><%= current_user.username.presence || "User" %></span>
            <% end %>

            <%= button_to "Log out",
                destroy_user_session_path,
                method: :delete,
                class: "hover:text-blue-300 text-white px-3 py-1.5 rounded cursor-pointer transition" %>
          <% else %>
            <%= link_to "Log in", new_user_session_path, class: "block hover:text-blue-300 text-white px-3 py-1.5 rounded cursor-pointer transition" %>
            <%= link_to "Sign up", new_user_registration_path, class: "block hover:text-blue-300 text-white px-3 py-1.5 rounded cursor-pointer transition" %>
          <% end %>
        </div>
      </details>

    </div>
  </div>
</header>
