<!-- app/views/invitations/new.html.erb -->
<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 z-40 bg-black/40" data-controller="dismiss" data-action="click->dismiss#close"></div>
  <div class="fixed inset-0 z-50 grid place-items-center p-4">
    <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl border border-gray-200">
      <div class="flex items-center justify-between p-4 border-b">
        <h3 class="text-lg font-semibold">Invite players</h3>
        <%= link_to "âœ•", "#", data: { action: "dismiss#close" }, class: "text-gray-500 hover:text-gray-700" %>
      </div>

      <div class="p-4">
        <%= form_with url: quiz_invitations_path(@quiz), scope: :invitation do |f| %>
          <div class="space-y-3">
            <div>
              <%= f.label :emails, "Emails (comma/space separated)", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :emails, rows: 3, placeholder: "alice@example.com, bob@example.com",
                    class: "mt-1 w-full rounded-lg border-gray-300" %>
            </div>

            <div>
              <%= f.label :message, "Optional message", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :message, rows: 3, class: "mt-1 w-full rounded-lg border-gray-300" %>
            </div>

            <div class="flex justify-end gap-2 pt-2">
              <%= link_to "Cancel", "#", data: { action: "dismiss#close" },
                    class: "px-3 py-1.5 rounded-lg border border-gray-300 text-gray-700" %>
              <%= f.submit "Send invites",
                    class: "px-4 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
