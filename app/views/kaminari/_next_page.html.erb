<li>
  <% if current_page.last? %>
    <span class="inline-flex items-center gap-1.5 rounded-lg border border-gray-100 bg-gray-50 px-3 py-1.5 text-sm text-gray-400 cursor-not-allowed">
      Next
      <%= heroicon "chevron-right", variant: :outline, options: { class: "h-4 w-4" } %>
    </span>
  <% else %>
    <%= link_to url,
          rel: "next",
          class: "inline-flex items-center gap-1.5 rounded-lg border border-gray-200 bg-white px-3 py-1.5 text-sm text-gray-700 shadow-sm hover:bg-gray-50" do %>
      Next
      <%= heroicon "chevron-right", variant: :outline, options: { class: "h-4 w-4" } %>
    <% end %>
  <% end %>
</li>
