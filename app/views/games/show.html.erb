<!-- Header / summary -->
<section class="bg-gradient-to-r from-violet-500 to-purple-600 text-white rounded-2xl p-6 mb-6 shadow">
  <h1 class="text-3xl font-semibold leading-tight"><%= @quiz.title %></h1>

  <% total_points = @quiz.questions.sum(:points) %>
  <% total_points = total_points.zero? ? 1 : total_points %>
  <% pct = ((@game.score.to_f / total_points) * 100).round %>

  <div class="mt-4 flex items-center gap-4 text-violet-50">
    <p class="text-lg">
      Result:
      <%= @game.score %> / <%= total_points %> points
    </p>
  </div>

  <!-- tiny progress bar -->
  <div class="mt-4 h-2 bg-white/20 rounded-full overflow-hidden">
    <div class="h-full bg-white/90" style="width: <%= pct %>%"></div>
  </div>
</section>

<!-- Questions -->
<div class="space-y-5">
  <% @results.each_with_index do |g, i| %>
    <section class="bg-white border border-gray-200 rounded-xl p-5 shadow-sm">
      <h2 class="font-semibold text-gray-800 mb-4 flex items-center gap-3">
        <span class="text-gray-500"><%= i + 1 %>.</span>
        <span><%= g[:question].content %></span>
        <span class="ml-auto text-xs px-2 py-0.5 rounded bg-gray-100 text-gray-600 border border-gray-200">
          <%= g[:points] %> ðŸ’Ž
        </span>
      </h2>

      <% if g[:question].respond_to?(:image_path) && g[:question].image_path.present? %>
        <div class="mb-4">
          <img src="<%= g[:question].image_path %>" alt="" class="rounded-xl shadow-sm max-h-64 object-cover">
        </div>
      <% end %>

      <% if g[:type] == :mcq %>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <% g[:options].each do |opt| %>
            <% chosen  = g[:chosen_ids].include?(opt.id) %>
            <% correct = g[:correct_ids].include?(opt.id) %>

            <% base = "rounded-xl px-4 py-3 shadow-sm border transition" %>
            <% classes =
                  if chosen && correct
                    "#{base} bg-green-600 text-white border-green-400"
                  elsif chosen && !correct
                    "#{base} bg-red-600 text-white border-red-400"
                  elsif !chosen && correct
                    "#{base} bg-gray-50 text-gray-800 border-green-300"
                  else
                    "#{base} bg-gray-50 text-gray-800 border-gray-200"
                  end %>

            <div class="<%= classes %>">
              <div class="flex items-center justify-between gap-3">
                <span><%= opt.content %></span>

                <div class="flex items-center gap-2 text-xs">
                  <% if correct %>
                    <span class="inline-block rounded px-2 py-0.5 <%= chosen ? 'text-white' : 'text-green-700' %>">
                      CORRECT
                    </span>
                  <% end %>
                  <% if chosen && !correct %>
                    <span class="inline-block rounded px-2 py-0.5 text-white">
                      GUESSED
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      <% else %>
        <% submitted = g[:submitted_text].to_s %>
        <% correct   = g[:correct] %>

        <% base = "relative overflow-hidden rounded-xl px-4 py-3 shadow-sm border transition bg-white" %>
        <% card =
            if correct
              "#{base} border-green-300"
            else
              "#{base} border-rose-300"
            end %>


        <div class="mt-3 text-sm text-gray-600 pb-4">Your answer</div>

        <div class="<%= card %>">
          <div
            class="pointer-events-none absolute inset-y-0 right-0 w-[100%] opacity-40"
            style="
              background:
                linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 5%, <%= correct ? 'rgba(16,185,129,.06)' : 'rgba(244,63,94,.06)' %> 5% 100%),
                repeating-linear-gradient(135deg, <%= correct ? 'rgba(16,185,129,.22)' : 'rgba(244,63,94,.22)' %> 0 12px, transparent 12px 24px);
            ">
          </div>

          <div class="relative flex items-center justify-between gap-3">
            <div>
              <div class="text-base font-medium"><%= submitted.presence || "â€”" %></div>
            </div>
            <div class="text-xs">
              <span class="inline-block rounded px-2 py-0.5">
                <%= correct ? "CORRECT" : "INCORRECT" %>
              </span>
            </div>
          </div>
        </div>

        <% if g[:acceptable_answers].present? %>
          <div class="mt-3 text-sm text-gray-600">
            Acceptable answers:
            <span class="font-medium">
              <%= g[:acceptable_answers].join(", ") %>
            </span>
          </div>
        <% end %>
      <% end %>

    </section>
  <% end %>
</div>

<% if @game.user == current_user %>
  <section class="mt-8">
    <h2 class="text-lg font-semibold text-gray-900">Your feedback</h2>

    <ul id="feedbacks" class="mt-3 space-y-3">
      <%= render @feedbacks %>
    </ul>

    <div class="mt-4">
      <%= turbo_frame_tag dom_id(@quiz, :feedback) do %>
        <%= render "feedbacks/form", quiz: @quiz, feedback: @quiz.feedbacks.new %>
      <% end %>
    </div>
  </section>
<% end %>

<footer class="mt-8 pt-4">
  <div class="flex">
    <%= link_to "Quiz Statistics", quiz_path(@quiz),
          class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-3 py-1.5
                  text-gray-800 hover:bg-gray-50 shadow-sm transition" %>
  </div>
</footer>
