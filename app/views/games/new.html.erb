<h1 class="text-2xl font-bold mb-4"><%= @quiz.title %></h1>

<%= form_with url: quiz_games_path(@quiz), method: :post do %>
  <% if flash[:alert] %>
    <div class="mb-4 rounded bg-red-50 text-red-700 p-3"><%= flash[:alert] %></div>
  <% end %>

  <div class="space-y-6">
    <% @quiz.questions.each do |q| %>
      <fieldset class="rounded border border-gray-200 bg-white p-4">
        <legend class="font-medium mb-2"><%= q.content %></legend>
        <div class="space-y-2">
          <% q.options.each do |opt| %>
            <label class="flex items-center gap-2">
              <input type="checkbox" name="answers[<%= q.id %>][]"
                     value="<%= opt.id %>">
              <span><%= opt.content %></span>
            </label>
          <% end %>
        </div>
      </fieldset>
    <% end %>
  </div>

  <div class="mt-6">
    <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
      Pabeigt
    </button>
  </div>
<% end %>
