<div id="<%= dom_id(option) %>" class="flex items-center gap-3 rounded border p-2 bg-white">
  <%= form_with model: option, data: { turbo_stream: true }, class: "flex-1 flex items-center gap-2" do |of| %>
    <%= of.check_box :correct %>
    <%= of.text_field :content, class: "flex-1 rounded p-2" %>
    <%= of.submit "Save", class: "btn" %>
  <% end %>

