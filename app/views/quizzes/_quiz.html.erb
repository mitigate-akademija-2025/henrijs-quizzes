<li class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition p-4">
  <div class="flex justify-between items-start">
    <div>
      <%= link_to quiz.title, quiz_path(quiz),
            class: "text-lg font-semibold text-blue-600 hover:underline" %>
      <% if quiz.description.present? %>
        <p class="text-gray-700 mt-1"><%= truncate(quiz.description, length: 120) %></p>
      <% end %>
      <p class="text-sm text-gray-500 mt-2">
        by <%= quiz.user.username %>
      </p>
    </div>

    <%= link_to new_quiz_game_path(quiz),
          class: "inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-3 py-1.5 rounded" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path d="M6 4l10 6-10 6V4z" />
      </svg>
      Play
    <% end %>
  
  </div>
</li>
