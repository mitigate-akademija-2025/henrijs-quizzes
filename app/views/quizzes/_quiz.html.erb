<li class="bg-white border border-gray-200 rounded-2xl p-5 shadow-sm hover:shadow-md transition">
  <div class="flex items-start justify-between gap-4">
    <div class="min-w-0">
      <%= link_to quiz.title, quiz_path(quiz),
            class: "block text-lg font-semibold text-gray-900 hover:underline truncate" %>

      <% if quiz.description.present? %>
        <p class="text-gray-600 mt-1 line-clamp-2"><%= truncate(quiz.description, length: 140) %></p>
      <% end %>

      <div class="mt-3 flex items-center gap-3 text-sm text-gray-500">
        <div class="inline-flex items-center gap-1">
          <%= heroicon "user", variant: :outline, options: { class: "h-4 w-4" } %>
          <span><%= quiz.user&.username || "Anonīms" %></span>
        </div>

        <span aria-hidden="true">•</span>
        <span><%= time_ago_in_words(quiz.created_at) %> ago</span>

        <span aria-hidden="true">•</span>
        <span><%= pluralize(quiz.questions.size, "question") %></span>
      </div>
    </div>

    <%= link_to new_quiz_game_path(quiz),
          class: "shrink-0 inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-3 py-1.5 rounded-lg shadow-sm transition" do %>
      <%= heroicon "play", variant: :outline, options: { class: "h-4 w-4" } %>
      Play
    <% end %>
  </div>
</li>
