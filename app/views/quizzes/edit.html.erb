<h1 class="text-2xl font-bold mb-4">Edit Quiz</h1>

<%= render "form", quiz: @quiz %>

<hr class="my-6">

<%= button_to "Delete Quiz",
    @quiz,
    method: :delete,
    data: { turbo_confirm: "Are you sure you want to delete this quiz?" },
    class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg" %>