<h1 class="text-3xl font-bold mb-6">Quizzes</h1>

<div class="mb-6">
  <% if user_signed_in? %>
    <%= link_to "âž• New quiz", new_quiz_path,
          class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded shadow" %>
  <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "text-blue-600 hover:underline" %>
    <span class="text-gray-600">to create a quiz.</span>
  <% end %>
</div>

<% if @quizzes.any? %>
  <ul class="space-y-4">
    <%= render @quizzes %>
  </ul>
<% else %>
  <p class="text-gray-600">No quizzes yet.</p>
  <% if user_signed_in? %>
    <p class="mt-2">
      <%= link_to "Create the first quiz", new_quiz_path, class: "text-blue-600 hover:underline" %>
    </p>
  <% end %>
<% end %>
