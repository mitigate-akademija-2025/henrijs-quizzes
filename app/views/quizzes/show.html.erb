<h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @quiz.title %></h1>

<% if @quiz.description.present? %>
  <p class="text-gray-700 mb-4"><%= @quiz.description %></p>
<% end %>

<p class="text-sm text-gray-500 mb-6">by <%= @quiz.user.username %></p>

<%= link_to "Edit Quiz", edit_quiz_path(@quiz),
      class: "inline-block bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded mb-6" %>

