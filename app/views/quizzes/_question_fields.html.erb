<div class="rounded border border-gray-200 bg-white p-4 shadow-sm">
  <div class="flex items-center justify-between gap-3 mb-3">
    <!-- Question number + text -->
    <div class="flex-1">
      <div class="flex items-center gap-2">
        <span class="font-semibold"><%= question_index + 1 %>.</span>
        <%= f.text_field :content, class: "w-full rounded p-3" %>
      </div>
    </div>

    <!-- Action buttons (delete + add option) -->
    <div class="flex items-center gap-2">
      <!-- Delete -->
      <label class="cursor-pointer p-2 rounded hover:bg-red-100 transition inline-flex items-center gap-1" title="Remove question">
        <%= f.check_box :_destroy, class: "hidden peer" %>
        <svg xmlns="http://www.w3.org/2000/svg"
             class="w-5 h-5 text-gray-500 peer-checked:text-red-600"
             fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 0a1 1 0 00-1 1v1h6V4a1 1 0 00-1-1m-4 0h4" />
        </svg>
      </label>

      <!-- Add option -->
      <%= button_tag name: "add_option_for",
                    value: question_index,
                    type: "submit",
                    class: "p-2 rounded bg-green-600 hover:bg-green-700 text-white flex items-center",
                    title: "Add option" do %>
        <svg xmlns="http://www.w3.org/2000/svg"
             class="w-4 h-4"
             fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 4v16m8-8H4" />
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Options -->
  <div class="space-y-3">
    <% f.object.options.each_with_index do |option, j| %>
      <%= f.fields_for :options, option, child_index: j do |of| %>
        <%= render "option_fields", of: of %>
      <% end %>
    <% end %>
  </div>
</div>
